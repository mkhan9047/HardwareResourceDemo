<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal"
        android:background="@color/clr_blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp18"
            android:text="SmartVisualInspection"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp15"
            android:textColor="@color/clr_white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List of Scopes"
                android:textSize="@dimen/dp15"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/chkUse"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:src="@drawable/ic_rect_check"
                    android:layout_marginLeft="@dimen/dp10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Use"
                    android:layout_marginLeft="@dimen/dp10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/chkReady"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:src="@drawable/ic_rect_uncheck"
                    android:layout_marginLeft="@dimen/dp10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready"
                    android:layout_marginLeft="@dimen/dp10"/>
            </LinearLayout>

        </LinearLayout>
        <GridView
            android:id="@+id/grdScope"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:numColumns="auto_fit"
            android:gravity="center"
            android:columnWidth="@dimen/dp100"
            android:stretchMode="columnWidth"
            android:layout_margin="@dimen/dp15"
            android:horizontalSpacing="@dimen/dp15"
            android:verticalSpacing="@dimen/dp15">
        </GridView>
    </LinearLayout>


</LinearLayout>
