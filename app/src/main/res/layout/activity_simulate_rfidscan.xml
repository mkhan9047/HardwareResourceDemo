<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SimulateRFIDScan">

    <include layout="@layout/toolbar" />

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp10"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_select_an_instrument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_an_instrument" />

    <GridView
        android:id="@+id/grdProcedure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp20"
        android:columnWidth="@dimen/dp100"
        android:gravity="center"
        android:horizontalSpacing="@dimen/dp15"
        android:numColumns="2"
        android:paddingTop="@dimen/dp20"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/dp15" />
</LinearLayout>

</LinearLayout>